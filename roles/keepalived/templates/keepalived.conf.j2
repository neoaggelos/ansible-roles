vrrp_instance {{ vip_name }} {
	state BACKUP
	nopreempt
	interface {{ vip_interface }}
	virtual_router_id {{ keepalived_virtual_router_id }}
	priority {{ keepalived_priority }}
	advert_int 1
	virtual_ipaddress {
		{{ vip_address }}/{{ vip_subnet_size }}
	}
	authentication {
		auth_type PASS
		auth_pass {{ keepalived_auth_pass }}
	}
}
